<h1>Please Login</h1>
<h3><a class="btn btn-secondary" href="/dev/login">Login with Auth0</a></h3>

<form action="/dev/login" method="POST" autocomplete="off" id="userForm">
    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" name="Username" placeholder="User Name" value="{{user.Username}}">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="Password" placeholder="" value="{{user.Password}}">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
    </div>
</form>